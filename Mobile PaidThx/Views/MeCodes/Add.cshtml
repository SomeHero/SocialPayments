@model Mobile_PaidThx.Models.MeCodesModels.AddMeCodeModel
@{
    ViewBag.Title = "Add ME Code";
    ViewBag.PageID = "add-mecode-paypoint-page";
    ViewBag.Classes = "page settings";
}
<div  id="@ViewBag.PageID" class="@ViewBag.Classes"  >
    
    <div class="header-pdthx" >
        <h1>
            Add ME Code</h1>
            <a href="@Url.Content("~/MeCodes")"  class="hd-btn-left btn-back">Back</a>
    </div>
    <div class="pd-content">
        
         <div class="top-panel">
    <p>
    Create a unique Mobile Exchange code below.  Like the #hashtags of money, ME Codes always start with a dollar sign "$". <span class="example">Examples: $payryannow, $newyearseveparty, etc."</span>
    </p>
    </div>
    @Html.ValidationSummary()
    <div class="pad">
         @using (Html.BeginForm("Add", "MeCodes", FormMethod.Post, new Dictionary<string, object> { { "data-transition", "slide-up" }, { "data-ajax", "false" } }))
         {
            

                <input type="text" id="txtMeCode" name="MECode" placeholder="$ME Code" required />
            <p>
             <button type="submit" id="btn-add-mecode" class="pd-btn green">
                  Add ME Code </button></p>
         }
        </div>
    </div>
</div>
@section PageScripts 
{
     <script type="text/javascript">
         $(document).ready(function () {
             currentMeCode = $('#txtMeCode').val();

             if (currentMeCode.charAt(0) != '$')
                 currentMeCode = '$' + currentMeCode;

             $(this).val(currentMeCode);

             $('#txtMeCode').focus();

             var currentMeCode = "";
             $(this).delegate('#txtMeCode', 'keydown', function () {

                 if (event.shiftKey && event.keyCode == '52') {
                     event.preventDefault();
                     return;
                 }
             });
             $(this).delegate('#txtMeCode', 'keyup', function () {

                 currentMeCode = $(this).val();

                 if (currentMeCode.charAt(0) != '$')
                     currentMeCode = '$' + currentMeCode;

                 $(this).val(currentMeCode);
                 event.preventDefault();
             });

         });
    </script>
}
}
