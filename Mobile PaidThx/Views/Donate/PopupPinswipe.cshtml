@model Mobile_PaidThx.Models.DonateModels.PinSwipeModel
@{
    ViewBag.Title = "Confirm Donation";
    ViewBag.PageID = "donate-pinswipe-page";
    ViewBag.Classes = "page ";
}
<div  id="@ViewBag.PageID" class="@ViewBag.Classes"  >
        
       
    <div class="header-pdthx" >
       <h1>
            Confirm</h1>
            <a href="@Url.Content("~/Donate")"  class="hd-btn-left btn-back history">Back</a>
    </div>
  
    <div class="pd-content">
        <div class="top-panel">
         @if(!String.IsNullOrEmpty(Model.RecipientImageUrl))
        {
            <text><img src="@Model.RecipientImageUrl" alt="@Model.RecipientName" /></text>
        }
        Please swipe your security pin to confirm your donation of @String.Format("{0:C}", Model.Amount) to @Model.RecipientName
        </div>
        @Html.ValidationSummary()
              <div class="pad">
        @using (Html.BeginForm("PopupPinswipe", "Donate", FormMethod.Post, new Dictionary<string, object> {{ "id", "pinSwipeForm"}, { "data-transition", "slide-up" } }))
        {       <div id="pinHolder" class="hider">
            <input type="password" id="patternlock" name="Pincode" class="patternlock" />
            <input type="submit" value="login" id="pinswipesubmit" data-role="none" />
            </div>
        }
    </div>
    </div>

</div>
@section PageScripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            pinswipeResizeController.resizePINs();
        });
    </script>
}
