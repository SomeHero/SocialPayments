@model Mobile_PaidThx.Models.SetupACHAccountModel

<script src="@Url.Content("~/Scripts/setupACHAccount.js")" type="text/javascript"></script>

<div data-role="page" id="setup-ach-account-page" class="modally">
     <div data-role="header" data-position="fixed" class="header-pdthx" data-theme="c">
	    <h1>Enable Payments</h1>
    </div>
    <div data-role="content">
<div class="top-panel">
@if (Model.Payment != null)
{
    <text>
        You have <b>@String.Format("{0:C}", Model.Payment.Amount)</b> in pending payments.
        To enable sending and receiving of payments thru PaidThx, please enter your preferred
        bank credentials below.
    </text>
}else{
    <text>
    Link a new bank account by entering the routing number and account number of the
    account below.
    </text>
    }
    <br />
</div>
<div id="setup-ach-account-form">
     @Html.ValidationSummary()

    @using(Html.BeginForm("SetupACHAccount", "Register", FormMethod.Post, new Dictionary<string, object>{{ "data-transition", "slideup" }} ))
    {
    <fieldset>
        <div class="editor-label">
            @Html.LabelFor(m => m.NameOnAccount)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(m => m.NameOnAccount, new Dictionary<string, object>() { { "placeholder", "Name on Account" } })
            @Html.ValidationMessageFor(m => m.NameOnAccount)
        </div>
        <div class="editor-label">
            @Html.LabelFor(m => m.RoutingNumber)
        </div>
        <div class="editor-field">
            @Html.PasswordFor(m => m.RoutingNumber, new Dictionary<string, object>() { { "placeholder", "Bank Routing Number (9 Digits)" } })
            @Html.ValidationMessageFor(m => m.RoutingNumber)
        </div>
        <div class="editor-label">
            @Html.LabelFor(m => m.AccountNumber)
        </div>
        <div class="editor-field">
            @Html.PasswordFor(m => m.AccountNumber, new Dictionary<string, object>() { { "placeholder", "Your Account Number" } })
            @Html.ValidationMessageFor(m => m.AccountNumber)
        </div>
        <div data-role="fieldcontain">
            <div data-role="controlgroup" data-type="horizontal">
                <input type="radio" name="AccountType" id="radio-choice-1" value="Checking" checked="checked"  />
                <label for="radio-choice-1">
                    Checking</label>
                <input type="radio" name="AccountType" id="radio-choice-2" value="Savings" />
                <label for="radio-choice-2">
                    Savings</label>
            </div>
        </div>
        <p style="margin-top: 15px">
            <button type="submit" id="button-submit-ach" class="btn-jq" data-theme="f" data-icon="check" data-iconpos="right">
               Add Bank Account</button>
        </p>
    </fieldset>
    }
</div>

    </div>
</div>

