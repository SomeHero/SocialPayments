@model Mobile_PaidThx.Models.ListPaymentAccountModel
@{
    ViewBag.Title = "Accounts";
}
<script src="@Url.Content("~/Scripts/paymentaccount.js")" type="text/javascript"></script>
<div id="accounts-content">
    <div class="paystream-header-title" style="margin-top: -5px; margin-left: -5px; margin-right: -5px;
        margin-bottom: 0px">
        My Accounts</div>
    <span id="closebtn" style="float: right; padding-top: 7px; padding-right: 2px">
        <img src="@Url.Content("~/Content/images/close-dialog.gif")" />
    </span>
    <div style="height: 1px; background: #B0B0B0; margin-left: -15px; margin-right: -15px;
        margin-bottom: 5px">
    </div>
    <div id="accounts-list" class="panel main-body">
        @Html.ValidationSummary()
        <h2>
            Your Linked Accounts</h2>
        <ul id="transactionsListRequests" data-role="listview" class="transactions" style="margin-bottom: 15px">
            @foreach (var bankAccount in Model.PaymentAccounts)
            {             
                <li class=""><a href="#" data-val="@bankAccount.PaymentAccountId" class="edit-payment-account">
                    <div class="bank-icon">
                        <img src="@bankAccount.BankIconURL" alt="@bankAccount.BankName" />
                    </div>
                    <div class="bank-info">
                        <strong>@bankAccount.Nickname</strong> - @bankAccount.AccountType - @bankAccount.AccountNumber
                    </div>
                </a></li>
            }
        </ul>
        <p>
            <button type="submit" id="add-account" class="imgbtn">
                <img src="@Url.Content("~/Content/images/add-icon.png")" alt="" /><span>Add an Account</span></button></p>
    </div>
</div>
