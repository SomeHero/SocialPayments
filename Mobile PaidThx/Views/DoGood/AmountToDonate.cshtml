<div data-role="page" id="send-page">
@{ Html.RenderPartial("TitleBar"); }
    <div data-role="header" data-position="fixed" class="nav-pdthx" data-theme="c">
        <h1>
            How Much?</h1>
    </div>
    <div data-role="content">
        <div style="font-size: 16px; text-align: center; padding: 15px; font-weight: bold">
            Choose Amount</div>
        <div style="height: 1px; width: 100%; background: #666666">
        </div>
        <div class="fieldamount" style="height: 50px;" id="amount-body">
            <div id="custom-amount-field" style="float: left; padding-left: 47px;">
                <input type="text" id="customAmountDonate" type="number" placeholder="0.00" step="0.01" style="width: 195px; margin-right: -19px;
                    float: left" />
            </div>
            <button id="gobtn-donate" data-role="none" style="position: absolute; left: 270px; padding-top: 8px;
                color: #FFFFFF">
                Go
            </button>
        </div>
        <div style="background: #7D7D7D; color: #FFFFFF; font-weight: bold; padding: 5px">
            QUICK SEND AMOUNTS</div>
        <div class="quicksend" style="width: 100%; margin: -5px">
            <button id="onedollarbtndonate" type="button" class="quickaddbtn-style" data-role="none">
                $1</button>
            <button id="fivedollarbtndonate" type="button" class="quickaddbtn-style" data-role="none">
                $5</button>
            <button id="tendollarbtndonate" type="button" class="quickaddbtn-style" data-role="none">
                $10</button>
            <button id="twentydollarbtndonate" type="button" class="quickaddbtn-style" data-role="none">
                $20</button>
        </div>
        <div style="background: #7D7D7D; color: #FFFFFF; font-weight: bold; padding: 5px">
            AVAILABLE TO SEND TODAY</div>
        <div class="availableamt">
            $40.00</div>
        <div style="background: #000000; height: 1px; margin-bottom: 10px">
        </div>
    </div>
</div>
