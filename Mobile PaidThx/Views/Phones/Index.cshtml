@model Mobile_PaidThx.Models.PhonesModels.PhonesModel
<div data-role="page" id="phone-page">
        @{ Html.RenderPartial("TitleBar"); }
<div data-role="header" data-position="fixed" class="nav-pdthx" data-theme="c">
        <h1>
            Phone #'s</h1>
    </div>
    <div data-role="content" style="margin: 15px;">
        <ul data-role="listview" data-inset="true">
            @foreach (var payPoint in Model.PayPoints)
            { 
            <li >
                 <a href="@Url.Content("~/Phones/Details/" + payPoint.Id)">
                        <img src="@Url.Content("~/content/images/icon-settings-phones-40x40.png")" />
                    @payPoint.Uri
                    <br />
                    @if (payPoint.Verified)
                    {
                        <text>Verified</text>
                    }
                    else
                    {
                        <text>Not Verified</text>
                    }
                </a>
            </li>
            }
        </ul>
        <ul data-role="listview" data-inset="true">
            <li>
                <a href="@Url.Content("~/Phones/Add")">Add Phone Number</a>
            </li>
        </ul>
    </div>
</div>
