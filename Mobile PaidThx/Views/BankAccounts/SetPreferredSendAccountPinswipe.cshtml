@{
    ViewBag.Title = "Confirm Change Preferred Send Account";
    ViewBag.PageID = "bankaccounts-set-send-pinswipe-page";
    ViewBag.Classes = "page";
}
<div id="@ViewBag.PageID" class="@ViewBag.Classes"  >
 
    <div class="header-pdthx" >
        <h1>
            Confirm</h1>
    </div>
  
    <div class="pd-content">
    <div class="top-panel"></div>
    @Html.ValidationSummary()
    <div class="pad">
        @using (Html.BeginForm("SetPreferredSendAccountPinSwipe", "BankAccounts", FormMethod.Post, new Dictionary<string, object> { { "id", "pinSwipeForm" }, { "data-transition", "slide-up" } }))
        {       
            <div id="pinHolder" class="hider">
            <input type="password" id="patternlock" name="Pincode" class="patternlock" />
            <input type="submit" value="login" id="pinswipesubmit" />
        </div>
        }
    </div>
</div>
</div>
