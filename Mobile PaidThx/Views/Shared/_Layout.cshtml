            <div style="padding-top:10px; text-align: center">
            
            {{if MessageType == "0"}}
            requested{{/if}}
            {{if MessageType == "1"}}
            sent
            {{/if}}
                        
            <span style="color: #40A37A">${formatAmount(Amount)}</span> to</div>
            <div style="padding-top:10px; text-align: right">
            <span style="color: #40A37A">${formatUri(RecipientUri)}</span></div>
         </div>
       </div>

        <p class="speech-bubble-border top"><span style="font-size: 11px">${Comments}</span></p>

