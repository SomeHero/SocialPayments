        <script id="transactionTemplate" type="text/html">
        <li class="receive pending ui-btn ui-btn-icon-right ui-li-has-arrow ui-li ui-btn-up-c" data-theme="c">
            <div class="ui-btn-inner ui-li">
                <div class="ui-btn-text">
                    <a href="#" class="ui-link-inherit">
                        <span class="trans-type">
                            {{if TransactionType == "2" }}
                                 <img src="/mobile/Content/images/list-funds-sent-icon.png" alt="Sending Funds">          
                            {{else}}
                                 <img src="/mobile/Content/images/list-funds-receive-icon.png" alt="Receiving Funds">   
                            {{/if}}
                        </span>
                        <div class="trans-title">
                            <strong>${SenderUri}</strong>
                            <em>${formatDate(TransactionDate)}</em>
                        </div>
                        <span class="trans-amount">
                            {{if TransactionStatus == "1" }}
                                <span class="status"><img src="/mobile/Content/images/list-status-pending-icon.png" alt="Status Pending"></span>
                            {{else}}
                                <span class="status"><img src="/mobile/Content/images/list-status-complete-icon.png" alt="Status Pending"></span>
                            {{/if}}
                            ${formatAmount(Amount)}
                        </span>
                    </a>
                </div>
                <span class="ui-icon ui-icon-arrow-r ui-icon-shadow"></span>
            </div>
        </li>
    </script>
