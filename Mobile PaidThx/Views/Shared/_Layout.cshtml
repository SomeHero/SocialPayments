<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title></title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width">
    <script>
        // workaround Facebook oauth feature-bug
        if (window.location.hash == '#_=_') {
            window.location.hash = '';
        }
    </script>
    <!-- Included CSS Files -->
    <link rel="stylesheet" href="@Url.Content("~/Content/foundation.css")">
    <link href="@Url.Content("~/Content/jquery.mobile-1.0.1.css")" rel="stylesheet" />
    <link rel="stylesheet" href="@Url.Content("~/Content/app.css")">
    <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Tangerine|Inconsolata|Droid+Sans">
    <!--[if lt IE 9]>
		<link rel="stylesheet" href="stylesheets/ie.css">
	<![endif]-->
