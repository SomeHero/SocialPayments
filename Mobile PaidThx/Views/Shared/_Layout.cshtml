    <script id="transactionTemplate" type="text/html">
        <li class="receive pending ui-btn ui-btn-icon-right ui-li-has-arrow ui-li ui-btn-up-a" data-theme="c">
            <div class="ui-btn-inner ui-li">
                <div class="ui-btn-text">
                    <a onclick="openOffersDialog();" class="ui-link-inherit">
                        <span class="trans-type">
                        <img src="/Content/images/noavatar.png" alt="Picture"/>
                        </span>
                            <div class="trans-title">
                            {{if Direction == "In" }}
                            <strong>${formatUri(SenderUri)}</strong>
                            {{else}}
                            <strong>${formatUri(RecipientUri)}</strong>
                            {{/if}}
                            
                            {{if MessageType == "1" && Direction == "In"}}
                            <div class="title-pay-in">Sent money to you</div>
                            {{/if}}
                            {{if MessageType == "1" && Direction == "Out"}}
                            <div class="title-pay-out">You sent money to them</div>
                            {{/if}}
                            {{if MessageType == "0" && Direction == "In"}}
                            <div class="title-request-in">Requested money from you</div>
                            {{/if}}
                            {{if MessageType == "0" && Direction == "Out"}}
                            <div class="title-request-out">You requested money from them</div>
                            {{/if}}
                            <div class="trans-comment">${Comments}</div>
                        </div>
                        <span class="trans-amount">
                            <div class="gray-above">${formatDate(TransactionDate)}</div>

                            {{if MessageType == "1" && Direction == "In"}}
                            <div class="paystream-pay-in">${formatAmount(Amount)}</div>
                            {{/if}}
                            {{if MessageType == "1" && Direction == "Out"}}
                            <div class="paystream-pay-out">${formatAmount(Amount)}</div>
                            {{/if}}
                            {{if MessageType == "0" && Direction == "In"}}
                            <div class="paystream-request-in">${formatAmount(Amount)}</div>
                            {{/if}}
                            {{if MessageType == "0" && Direction == "Out"}}
                            <div class="paystream-request-out">${formatAmount(Amount)}m</div>
                            {{/if}}

                            {{if TransactionStatus == "0"}}
                            <div class=gray-out>Submitted</div>{{/if}}
                            {{if TransactionStatus == "1"}}
                            <div class=gray-out>Pending</div>{{/if}}
                            {{if TransactionStatus == "2"}}
                            <div class=gray-out>Complete</div>{{/if}}
                            {{if TransactionStatus == "3"}}
                            <div class=gray-out>Cancelled</div>{{/if}}
                            {{if TransactionStatus == "4"}}
                            <div class=gray-out>Returned</div>
                            {{/if}}
                        </span>
                    </a>
                </div>
                <span class="ui-icon ui-icon-arrow-r ui-icon-shadow"></span>
            </div>
        </li>
    </script>
    <script id="dialogTemplate" type="text/html">
    <a onclick="closeOffersDialog('popup');" class="paystream-dialog-closebtn"></a>
    <div class="paystream-dialog-title-bg">
    {{if MessageType == "1" && Direction == "In"}}
    $ Received{{/if}}
    {{if MessageType == "1" && Direction == "Out"}}
    $ Sent{{/if}}
    {{if MessageType == "0" && Direction == "In"}}
    Request Received{{/if}}
    {{if MessageType == "0" && Direction == "Out"}}
    Request Sent{{/if}}    
    </div>
    <div style="overflow:auto; height:90%">
       <div class="paystream-dialog-inner-display">
         <div class="paystream-wrapper"><div class="paystream-user">
          <img src="http://images.paidthx.com/assets/noavatar.png" alt="user"/>
         </div>
         <div class="paystream-user-next"><img src="http://images.paidthx.com/assets/noavatar.png" alt="user2pic" />
         </div>
         <div class="user-statement">
         ${formatUri(SenderUri)}
            <div style="padding-top:10px; text-align: center">
            
            {{if MessageType == "0"}}
            requested{{/if}}
            {{if MessageType == "1"}}
            sent
            {{/if}}
                        
            <span style="color: #40A37A">${formatAmount(Amount)}</span> to</div>
            <div style="padding-top:10px; text-align: right">
            <span style="color: #40A37A">${formatUri(RecipientUri)}</span></div>
         </div>
       </div>

        <p class="speech-bubble-border top"><span style="font-size: 11px">${Comments}</span></p>

        <div class="paystream-date">on ${formatDialogDate(TransactionDate)}</div>
        </div>
        <div class="paystream-subbar">CURRENT STATUS</div>
        <div class="paystream-status-dialog">Processing</div>
        <div class="paystream-subbar">WHAT NEXT?</div>
    </div>
