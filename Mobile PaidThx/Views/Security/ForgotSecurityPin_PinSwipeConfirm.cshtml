@model Mobile_PaidThx.Models.SecurityModels.ChangeSecurityPinModel
@{
    ViewBag.Title = "Change PIN";
    ViewBag.PageID = "forgotsecuritypin-pinswipe-confirm-page";
    ViewBag.Classes = "page";
}
<div  id="@ViewBag.PageID" class="@ViewBag.Classes" >
        
    <div class="header-pdthx" >
        <h1>
            Confirm</h1>
            <a href="@Url.Content("~/ForgotSecurityPin")"  class="hd-btn-left btn-back history">Cancel</a>
    </div>
    <div class="pd-content">
    <div class="pad">
    @Html.ValidationSummary()
      
        @using (Html.BeginForm("ForgotSecurityPin_PinSwipeConfirm", "Security", FormMethod.Post, new Dictionary<string, object> {{ "id", "pinSwipeForm"}, { "data-transition", "slide-up" } }))
        {       
            <div id="pinHolder" class="hider">
            <input type="password" id="patternlock" name="Pincode" class="patternlock" />
            <input type="submit" value="login" id="pinswipesubmit" data-role="none" />
        </div>
        }
    </div>
    </div>


</div>

@section PageScripts{
<script type="text/javascript">
    $(document).ready(function () {
        pinswipeResizeController.resizePINs();
    });
</script>
}