@{
    ViewBag.Title = "Index";
    ViewBag.PageID = "preferences-page";
    ViewBag.Classes = "page settings";
    TempData["DataUrl"] = "data-url=/mobile/Preferences";
}
<div  id="@ViewBag.PageID" class="@ViewBag.Classes"  >
    
    <div class="header-pdthx" >
             
        <h1>
            Settings</h1>
        <a href="@Url.Content("~/Dashboard")"  class="hd-btn-left btn-back">Home</a>
    </div>
    <div class="pd-content">
        <div class="pad">
            <!-- Edit Profile -->
            <ul  class="panel-container">
                <li class="settings" id="profile"><a href="@Url.Content("~/Profile")"   >
                    <h2 class="heading">Edit Profile</h2>
                    <h4 class="subheading">Update your information</h4>
                    </a>
                    </li>
            </ul>
             <h2 class="section-header">FUNDING SOURCES</h2>
            <ul  class="panel-container">
                <li class="settings" id="banks">
                    <!-- Bank Account -->
                   <a href="@Url.Content("~/BankAccounts")"  >
                   <h2 class="heading">
                     Bank Accounts</h2>
                     <h4 class="subheading">Add/manage bank accounts</h4>
                     
                     </a></li>
            </ul>
            <h2 class="section-header">LINKED PAYPOINTS <a class="info-helper" title="About Paypoints" tip="Paypoints are ways that people can pay you.  Some people know your email address or phone number, some friends you only know through facebook, still other folks you'd rather not know any of that, so they'll use a ME Code." href="#">WHAT?</a></h2>
            <ul class="panel-container">
                <li class="settings" id="emails">
                    <!-- Separate Set -->
                    <!-- Email Accounts -->
                    <a href="@Url.Content("~/Emails")">
                                   <h2 class="heading"> Emails </h2>
                    <h4 class="subheading">Add/manage emails</h4> </a></li>
                    <li class="settings" id="phones">
                    <!-- Phones -->
                    <a href="@Url.Content("~/Phones")">
                           <h2 class="heading"> Phones </h2>
                    <h4 class="subheading">Add/manage phones</h4></a></li>
                <li class="settings" id="socials">
                    <!-- Social Networks -->
                    <a href="@Url.Content("~/SocialNetworks")">
                                   <h2 class="heading"> Social Networks </h2>
                    <h4 class="subheading">Link with Facebook</h4></a></li>
                
                <!--ME Codes -->
                <li class="settings" id="mecodes">
                <a href="@Url.Content("~/MeCodes")">
                        <h2 class="heading"> ME Codes </h2>
                    <h4 class="subheading">Your Mobile Exchange codes</h4></a></li>
            </ul>
            <h2 class="section-header">YOUR SETTINGS</h2>
            <ul  class="panel-container">
                <li class="settings" id="notifications">
                    <a href="@Url.Content("~/Notifications")">
                   <h2 class="heading"> Notifications </h2>
                    <h4 class="subheading">How and when we update you</h4>
                    </a> </li>
                <!--<li class="settings" id="sharing">
                    <a href="@Url.Content("~/Sharing")"  >
                   <h2 class="heading"> Sharing </h2>
                    <h4 class="subheading">How and when you share</h4>
                    </a>
                </li>-->
                <li class="settings" id="security">
                <a href="@Url.Content("~/Security")">
                   <h2 class="heading"> Security & Privacy </h2>
                    <h4 class="subheading">Change password and more</h4>
                     </a>
                </li>
            </ul>
            <h2 class="section-header">HELP &amp; FEEDBACK</h2>
            <ul  class="panel-container">
                <li class="settings" id="help">
                    <!-- Separate Set -->
                    <!-- Help -->
                    <a href="@Url.Content("~/Help")" >
                                     <h2 class="heading"> Help </h2>
                    <h4 class="subheading">Issues? We can help</h4>
                      </a></li>
            </ul>
            <h2 class="section-header">LEGAL MUMBO JUMBO</h2>
            <ul  class="panel-container">
                <li class="settings" id="useragreement">
                    <!-- Separate Set -->
                    <!-- User Agreement -->
                    <a href="@Url.Content("~/UserAgreement")">
                                        <h2 class="heading">User Agreement</h2>
                    <h4 class="subheading">Terms of Service & Privacy</h4>
                    </a>
                    </li>
                    </ul>
                    <h2 class="section-header">UNTIL NEXT TIME!</h2>
                    <ul  class="panel-container">
                <li class="settings" id="signout">
                    <!-- Sign Out -->
                    <a href="@Url.Content("~/Preferences/SignOut")">
                    <h2 class="heading">Sign Out</h2>
                    <h4 class="subheading">Log out of PaidThx</h4>
                    </a></li>
            </ul>
        </div>
    </div>
</div>
@section PageScripts
{
<script type="text/javascript">
    $('.info-helper').qtip({
        content: {
        text: function(api) {
				return $(this).attr('tip');
			},
            title: {
			text: function(api) {
				return $(this).attr('title');
			},
            button: true
		}
    },
    position: {
        my: 'bottom right',
        at: 'top right'
    },
    style: {
        classes: 'ui-tooltip-shadow ui-tooltip-rounded ui-tooltip-tipsy'
    }, 
    show: {
        event: 'click'
    },
    hide: {
        event: 'unfocus'
    }


    });

</script>
}