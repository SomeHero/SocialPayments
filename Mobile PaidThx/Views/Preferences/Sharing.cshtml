@model Mobile_PaidThx.Models.SharingModels.SharingModel
    ViewBag.Title = "Notifications";
}
<div data-role="page" id="preferences-sharing-page" data-theme="c">
    @{ Html.RenderPartial("TitleBar"); }
    <div data-role="header" data-position="fixed" class="nav-pdthx" data-theme="c">
        <h1>
            Sharing</h1>
    </div>
    <div data-role="content" style="margin: 15px; background-color: #ffffff;">
    @foreach (var subject in Model.SharingSubjects)
    {
        @subject.Description
        <ul data-role="listview" data-inset="true">
        @foreach (var item in subject.SharingItems)
        {
        <li>
            <div data-role="content" style="margin: 15px;">
                <label for="flip-1">@item.Description</label>
                <select name="flip-1" id="flip-1" data-role="slider">
                    <option value="off">Off</option>
                    <option value="on">On</option>
                </select>
                </li>
        }
            </ul>
    }
    </div>
</div>
