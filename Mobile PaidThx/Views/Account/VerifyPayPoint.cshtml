@{
    ViewBag.Title = "Verify Paypoint";
    ViewBag.PageID = "paypoint-verify";
    ViewBag.Classes = "page";
}

<div  id="@ViewBag.PageID" class="@ViewBag.Classes" >
    <div class="header-pdthx">
        <h1>
           Verified</h1>
       <a href="@Url.Content("~/Dashboard")"  class="hd-btn-left btn-back history">Home</a>
    </div>
    <div class="pd-content">
    <div class="pad">
        @if (ViewBag.Confirmed)
        {
            <text>Thanks. You have successfully verified this paypoint and can now begin to receive funds.</text>
        }
        else
        {
            @ViewBag.Message
        }
        </div>
    </div>
</div>