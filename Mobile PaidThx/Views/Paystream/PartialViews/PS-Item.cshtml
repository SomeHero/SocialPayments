<script id="paystreamItem" type="text/x-jquery-tmpl">
    <li class="paystreamLi {{if direction == "In"}}in{{/if}} {{if direction == "Out"}}out{{/if}} {{if messageType == "PaymentRequest"}}request{{/if}} {{if messageType == "Payment"}}payment{{/if}} {{if messageType == "Donation"}}donation{{/if}} {{if !recipientSeen}}new{{/if}}">
        <a href="#" class="paystreamItem" messageId="${Id}">

        {{if transactionImageUri}}
            <img width="50" height="50" class="rounded ps-image" src="${transactionImageUri}" alt="Image" />
        {{else}}
            <img width="50" height="50" class="rounded ps-image" src="/mobile/Content/images/avatar.png" alt="Image" />
        {{/if}}

<h2 class="ps-other-party"> 
        {{if direction == "In"}}
${senderName}
        {{/if}}
        {{if direction == "Out"}}
${recipientName}
        {{/if}}

        <br><span class="ps-message">
         {{if comments}}                                               
 <text>"${comments}"</text>
 {{else}}
No message
 {{/if}}
</span>  
<br><span class="ps-datetime">                                               
${createDate}
</span>  

</h2>

                              
<div class="ps-details">
<div class="left">

<span class="ps-type">
 {{if direction == "In"}}
                {{if messageType == "PaymentRequest"}}
               Request In
                {{else messageType == "Payment"}}
                Money In
                {{else messageType == "Donation"}}
                Donation In
                {{else messageType == "Pledge"}}
                Pledge In
                {{/if}}
{{else direction == "Out"}}
                {{if messageType == "PaymentRequest"}}
                Request Out
                {{else messageType == "Payment"}}
                Money Out
                {{else messageType == "Donation"}}
                Donation Out
                {{else messageType == "Pledge"}}
                Pledge Out
                {{/if}}
            {{/if}}
</span>
<span class="ps-status">
&nbsp;|&nbsp;&nbsp;${messageStatus}
</span>
<span class="ps-dummy">
&nbsp;
</span>
</div>
<div class="right">
<span class="ps-amount">
 {{if direction == "In"}}
                {{if messageType == "PaymentRequest"}}
               -
                {{else messageType == "Payment"}}
                +
                {{else messageType == "Donation"}}
                &#9829;
                {{else messageType == "Pledge"}}
                &#9829;
                {{/if}}
{{else direction == "Out"}}
                {{if messageType == "PaymentRequest"}}
                +
                {{else messageType == "Payment"}}
                -
                {{else messageType == "Donation"}}
                &#9829;
                {{else messageType == "Pledge"}}
                &#9829;
                {{/if}}
            {{/if}}$${amount.toFixed(2)}
</span>
</div>
<div class="clear">
</div>
</div>             

        </a>
     </li>
</script>
