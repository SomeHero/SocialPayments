<script src="@Url.Content("~/Scripts/send-money.js")" type="text/javascript"></script>
<div id="main-body" class="panel">
    <h2>
        Send Money</h2>
    <form id="frmSendMoney" action="@Url.Content("~/Profile/SendMoney")" method="post">
    <p>
        <label for="txtSendTo">
            Send To:</label>
        <input type="text" id="txtSendTo" name="RecipientUri" placeholder="Name, email or phone #"
            required />
    </p>
    <p>
        <label for="txtAmount">
            Amount to Send:</label>
        <input type="text" id="txtAmount" name="Amount" placeholder="$0.00" required />
        <div id="clickamountbtn" style="background: #000000; height: 48px; width: 288px"><span style="color: #FFFFFF">CHOOSE AMOUNT</span></div>
    </p>
    <p>
        <label for="txtComments" style="margin-bottom: 15px">
            Comments:</label>
        <textarea name="Comments" id="txtComments" rows="10" cols="100" placeholder="Enter notes, comments, etc"
            required></textarea>
    </p>
    <p>
        <button type="submit" id="btnSendMoney" class="imgbtn">
            <img src="@Url.Content("~/Content/images/send-money-button-icon.png")" alt="" /><span>Send
                Money Now</span></button>
    </p>
    </form>
</div>
