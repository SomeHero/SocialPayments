<script src="@Url.Content("~/Scripts/request-money.js")" type="text/javascript"></script>
<div id="header-wrapper" class="clearfix" style="position: relative; vertical-align: text-bottom">
    <div id="logo" style="float: left">
        <img src="@Url.Content("~/Content/images/paidthx-alpha-transparent.png")" alt="PaidThx Logo" width="140" /></div>
    <div id="page-title" style="position: absolute; bottom: 4px; right: 0;">
        Request Money
    </div>
</div>
<div id="main-body" class="panel">
    <h2>
        Request Money</h2>
     <form id="frmRequestMoney" action="@Url.Content("~/Profile/RequestMoney")" method="post">
    <p>
        <label for="txtSendTo">
            Request From:</label>
        <input type="text" id="txtSendTo" name="RecipientUri" placeholder="Name, email or phone #" required />
    </p>
    <p>
        <label for="txtAmount">
            Request Amount:</label>
        <input type="text" id="txtAmount" name="Amount" placeholder="$0.00" required />
    </p>
    <p>
        <label for="txtComments" style="margin-bottom: 15px">
            Notes/Messages:</label>
        <textarea name="Comments" id="txtComments" rows="10" cols="100" placeholder="Enter notes, comments, etc" required></textarea>
    </p>
    <p>
        <button type="submit" id="btnRequestMoney" class="imgbtn"><img src="@Url.Content("~/Content/images/request-money-button-icon.png")" alt="" /><span>Request Money Now</span></button>
    </p>
    </form>
</div>
