@using SocialPayments.Web.ExtensionMethods
@model SocialPayments.Web.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/User/user-agreement.js")" type="text/javascript"></script>
<style>
.editor-label {
	TEXT-ALIGN: left; LINE-HEIGHT: 1.3em; WIDTH: 400px; FONT-FAMILY: "Museo 100", Helvetica, Arial, sans-serif; COLOR: #666; FONT-SIZE: 1.3em
}
.editor-field 
{
	margin-top: 0.2em;
}
.editor-field  INPUT[type=text], .editor-field input[type=password] {
	BORDER-BOTTOM: #d0d0d0 1px solid; BORDER-LEFT: #d0d0d0 1px solid; PADDING-BOTTOM: 6px; PADDING-LEFT: 9px; WIDTH: 300px; PADDING-RIGHT: 9px; FONT-FAMILY: Arial, Helvetica, sans-serif; COLOR: #363636; FONT-SIZE: 20px; BORDER-TOP: #d0d0d0 1px solid; BORDER-RIGHT: #d0d0d0 1px solid; PADDING-TOP: 6px; border-radius: 5px; -moz-border-radius: 5px; -webkit-border-radius: 5px
}
.field-validation-error 
{
    display: block;
}
select {
	BORDER-BOTTOM: #d0d0d0 1px solid; BORDER-LEFT: #d0d0d0 1px solid;  WIDTH: 300px; FONT-FAMILY: Arial, Helvetica, sans-serif; COLOR: #363636; FONT-SIZE: 20px; BORDER-TOP: #d0d0d0 1px solid; BORDER-RIGHT: #d0d0d0 1px solid;  border-radius: 5px; -moz-border-radius: 5px; -webkit-border-radius: 5px
}
h4 
{
	TEXT-ALIGN: center; FONT: 28px bold "Museo 700"; PADDING-TOP: 0px;
}
h5 
{
	TEXT-ALIGN: center; MARGIN-TOP: 25px; WIDTH: 100%; FONT: 18px "Museo 100", Helvetica, Arial, sans-serif; COLOR: #777;
}
</style>
<div id="form-wrapper">
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "Account creation was unsuccessful. Please correct the errors and try again.")
    <div id="content" style="text-align: center; width: 820px; margin: 10px auto;">
    <h4>
    Sign up and start sending money in seconds</h4>
<h5>
    It's totally Free to get started. Fill out the form below and get going in no time!</h5>
    <div id="contentWrapper" style="position: relative;">
        <div id="contentLeft" style="text-align: left;  left: 0px; width: 400px">
            <div class="editor-label">
                @Html.LabelFor(m => m.MobileNumber)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.MobileNumber)
                @Html.ValidationMessageFor(m => m.MobileNumber)
            </div>
            <div class="editor-label">
                @Html.LabelFor(m => m.UserName)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
            <div class="editor-label">
                @Html.LabelFor(m => m.Email)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Email)
                @Html.ValidationMessageFor(m => m.Email)
            </div>
            <div class="editor-label">
                @Html.LabelFor(m => m.Password)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            <div class="editor-label">
                @Html.LabelFor(m => m.ConfirmPassword)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.ConfirmPassword)
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </div>
        </div>
        <div id="contentRight" style="text-align: left; position: absolute; margin-top: 0px; padding-top: 0px; top: 0px; left: 420px; width: 400px">
            <div class="editor-label" style="margin-top: 0px">
                @Html.LabelFor(m => m.NameOnBankAccount)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.NameOnBankAccount)
                @Html.ValidationMessageFor(m => m.NameOnBankAccount)
            </div>
            <div class="editor-label">
                @Html.LabelFor(m => m.RoutingNumber)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.RoutingNumber)
                @Html.ValidationMessageFor(m => m.RoutingNumber)
            </div>
            <div class="editor-label">
                @Html.LabelFor(m => m.AccountNumber)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.AccountNumber)
                @Html.ValidationMessageFor(m => m.AccountNumber)
            </div>
            <div class="editor-label">
                @Html.LabelFor(m => m.ConfirmAccountNumber)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.ConfirmAccountNumber)
                @Html.ValidationMessageFor(m => m.ConfirmAccountNumber)
            </div>
            <div class="editor-label">
                @Html.LabelFor(m => m.AccountType)
            </div>
            <div class="editor-field">
                @Html.DropDownList("AccountType", new Dictionary<int, string>
                                  {
                                      {1, "Savings"},
                                      {2, "Checking"}
                                  });
                @Html.ValidationMessageFor(m => m.AccountType)
            </div>
        </div>
        <span class="clear"></span>
        <p>
            <input id="btn-register" type="submit" value="Register" />
        </p>
        </div>
    </div>
}
</div>
<div id="user-agreement-dialog" style="display: none;">
<span id="user-agreement-validation" class="field-validation-error" style="display: none;">
    You much agree to the Terms and Conditions of the PdThx service before continuing.
</span>
<p>
Test user agreement
</p>
<input type="checkbox" id="chk-user-agreement" name="chk-user-agreement" />I agree with the Terms and Conditions
</div>
