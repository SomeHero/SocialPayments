@model PagedList.IPagedList<SocialPayments.Web.Admin.Models.AdminUserModel>

@{
    ViewBag.Title = "Index";
}
<script src="@Url.Content("~/Scripts/adminusers.js")" type="text/javascript"></script>
<h2>Index</h2>

<p>
    <input type="button" value="Create User" class="create" />
</p>

<table>
    <tr>
        <th>Id</th>
        <th>
            User Name
        </th>
        <th>
            Email Address
        </th>
        <th>
            Create Date
        </th>
        <th>
            Last Logged In
        </th>
        <th>
            Is Locked Out
        </th>
        
    </tr>

@foreach (var item in Model) {
    <tr class="edit" userid="@item.Id">
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmailAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreateDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastLoggedIn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsLockedOut)
        </td>
        
    </tr>
}

</table>

<div> 
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) 
    of @Model.PageCount 
      
    @if (Model.HasPreviousPage) 
    { 
        @Html.ActionLink("<<", "Index", new { pageIndex = 1, sortOrder = ViewBag.CurrentSort, currentFilter=ViewBag.CurrentFilter  }) 
        @Html.Raw(" "); 
        @Html.ActionLink("< Prev", "Index", new { pageIndex = Model.PageNumber - 1, sortOrder = ViewBag.CurrentSort, currentFilter=ViewBag.CurrentFilter  }) 
    } 
    else 
    { 
        @:<< 
        @Html.Raw(" "); 
        @:< Prev 
    } 
      
    @if (Model.HasNextPage) 
    { 
        @Html.ActionLink("Next >", "Index", new { pageIndex = Model.PageNumber + 1, sortOrder = ViewBag.CurrentSort, currentFilter=ViewBag.CurrentFilter  }) 
        @Html.Raw(" "); 
        @Html.ActionLink(">>", "Index", new { pageIndex = Model.PageCount, sortOrder = ViewBag.CurrentSort, currentFilter=ViewBag.CurrentFilter  }) 
    } 
    else 
    { 
        @:Next > 
        @Html.Raw(" ") 
        @:>> 
    } 
</div>
<div id="dialog-create" class="dialog-form" title="Create User" style="display: none;">
	<p class="validateTips">All form fields are required.</p>

	<fieldset>
    <legend>Account Information</legend>
    <form action="@Url.Content("~/Administration/Create")" method="post">
        <div class="editor-label">
		    <label for="name">User Name</label>
        </div>
        <div class="editor-field">
		    <input type="text" name="UserName" id="name" class="text ui-widget-content ui-corner-all" />
		</div>
        <div class="editor-label">
		    <label for="email">Email</label>
		</div>
        <div class="editor-field">
            <input type="text" name="Email" id="email" value="" class="text ui-widget-content ui-corner-all" />
        </div>
        <div class="editor-label">
		    <label for="name">Password</label>
        </div>
        <div class="editor-field">
		    <input type="text" name="Password" id="password" class="text ui-widget-content ui-corner-all" />
		</div>
        <div class="editor-label">
		    <label for="name">Confirm Password</label>
        </div>
        <div class="editor-field">
		    <input type="text" name="ConfirmPassword" id="confirmpassword" class="text ui-widget-content ui-corner-all" />
		</div>
        <p>
            <input type="submit" value="Save Changes" />
        </p>
        </form>
	</fieldset>
</div>
<div id="dialog-edit" class="dialog-form" title="Edit User" style="display: none;">
	<p class="validateTips">All form fields are required.</p>

	<fieldset>
    <legend>Edit Account Information</legend>
    <form action="@Url.Content("~/Administration/Edit")" method="post">
        <input type="hidden" id="userId" name="Id" />
        <div class="editor-label">
		    <label for="name">User Name</label>
        </div>
        <div class="editor-field">
		    <input type="text" name="name" id="name" class="text ui-widget-content ui-corner-all" disabled="true" />
		</div>
        <div class="editor-label">
		    <label for="email">Email</label>
		</div>
        <div class="editor-field">
            <input type="text" name="Email" id="email" value="" class="text ui-widget-content ui-corner-all" />
        </div>
        <p>
            <input type="submit" value="Save Changes" />
        </p>
        </form>
	</fieldset>
</div>
